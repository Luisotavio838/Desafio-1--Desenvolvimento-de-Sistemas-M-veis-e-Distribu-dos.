import 'package:hive/hive.dart';
import '../../modules/home/model/address_model.dart';

class HiveStorage {
  static const String boxAddresses = 'addresses_box';

  static Future<void> init() async {
    await Hive.openBox<AddressModel>(boxAddresses);
  }

  static Box<AddressModel> get addressesBox => Hive.box<AddressModel>(boxAddresses);
}
