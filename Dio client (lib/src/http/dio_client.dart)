import 'package:dio/dio.dart';

class DioClient {
  static final DioClient _instance = DioClient._internal();
  factory DioClient() => _instance;
  late final Dio dio;

  DioClient._internal() {
    dio = Dio(BaseOptions(
      baseUrl: 'https://viacep.com.br/ws/',
      connectTimeout: 5000,
      receiveTimeout: 5000,
    ));
  }
}
